@{// Initialize page
var email = "";
var name="";
var password = "";
var adder = "";
var mobile="";
var confirmPassword = "";
var ErrorMessage = "";

// If this is a POST request, validate and process data
if (IsPost)
{
email = Request.Form["email"];
name= Request.Form["name"];
adder = Request.Form["adder"];
mobile = Request.Form["mobile"];
password = Request.Form["password"];
confirmPassword = Request.Form["confirmPassword"];

if (email.IsEmpty() || password.IsEmpty() || name.IsEmpty() || adder.IsEmpty() || mobile.IsEmpty()) {
ErrorMessage = "You must specify both email and password.";}

if (password != confirmPassword) {
ErrorMessage = "Password and confirmation do not match.";}

// If all information is valid, create a new account
if (ErrorMessage=="")
{ 
var db = Database.Open("Users");
var user = db.QuerySingle("SELECT Email FROM UserProfile WHERE LOWER(Email) = LOWER(@0)", email);
if (user == null)
{
db.Execute("INSERT INTO UserProfile (Email,name,mobile,adder) VALUES (@0, @1,@2,@3)", email,name,mobile,adder);
WebSecurity.CreateAccount(email, password, false);

// Navigate back to the homepage and exit
Response.Redirect("~/Order2");
} 
else {ErrorMessage = "Email address is already in use.";}
}
}
}

@if (ErrorMessage!="")
{
<p>@ErrorMessage</p> 
<p>Please correct the errors and try again.</p>
}

