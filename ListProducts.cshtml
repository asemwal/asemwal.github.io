@{
  
var db = Database.Open("Pominos"); 
var selectQueryString = "SELECT * FROM Product ORDER BY Price"; 
}
<html> 
    <body> 
<h1>Pominos Pizza Mania</h1> 
<table> 
<tr>
<th>Product</th> 
<th>Description</th> 
<th>Price</th> 
</tr>
@foreach(var row in db.Query(selectQueryString))
{
<tr> 
<td align="left">@row.Name</td> 
<td align="right">@row.Description</td> 
<td align="right">@row.Price</td> 
</tr> 
}
</table> 
        <br>
        <br><br>
</body> 
</html>
